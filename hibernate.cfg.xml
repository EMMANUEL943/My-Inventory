<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/inventorydb?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">traisoft</property>
    <mapping resource="chi/pojo/Suppliers.hbm.xml"/>
    <mapping resource="chi/pojo/Product.hbm.xml"/>
    <mapping resource="chi/pojo/Customers.hbm.xml"/>
    <mapping resource="chi/pojo/Users.hbm.xml"/>
    <mapping resource="chi/pojo/Orders.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
